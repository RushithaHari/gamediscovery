Vagrant.configure("2") do |config|
    # ==========================================================================
    # MACHINE
    # ==========================================================================
    config.vm.box = "generic/ubuntu1710"

    # ==========================================================================
    # HARDWARE
    # ==========================================================================
    config.vm.provider "virtualbox" do |v|
        v.gui = false
        v.memory = 2048
    end

    # ============================================================================
    # PROVISIONING
    # ============================================================================
    config.vm.provision "shell", path: "provision.sh"
end
